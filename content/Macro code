    <button onclick="applySettings()">Apply Settings</button>

    <script>
        // Function to apply settings for the keyboard
        function applySettings() {
            const button1Action = document.getElementById('button1').value;
            const button2Action = document.getElementById('button2').value;
            const knobAction = document.getElementById('knob').value;

            // Example: Send configuration to the microcontroller or backend API
            const settings = {
                button1: button1Action,
                button2: button2Action,
                knob: knobAction
            };

            // For now, we'll just log the settings (this would be sent to the keyboard)
            console.log('Applied Settings:', settings);

            // If using WebHID API to connect to the keyboard:
            connectToKeyboard(settings);
        }

        // Example function using WebHID API (you would need the proper setup for this to work with your hardware)
        async function connectToKeyboard(settings) {
            try {
                const devices = await navigator.hid.requestDevice({ filters: [] });
                if (devices.length > 0) {
                    const device = devices[0];
                    await device.open();
                    console.log("Connected to device:", device.productName);

                    // Send settings to the device
                    const encoder = new TextEncoder();
                    const data = encoder.encode(JSON.stringify(settings));
                    await device.sendReport(0x00, data);  // This part depends on your deviceâ€™s specific implementation
                }
            } catch (error) {
                console.error("Failed to connect to device:", error);
            }
        }
    </script>
